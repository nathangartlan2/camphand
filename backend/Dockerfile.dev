ARG PYTHON_VERSION=3.13.6
FROM python:${PYTHON_VERSION}-slim AS base

WORKDIR /code

## copy separatedly to cache this step of image creation    
COPY ./requirements.txt /code/requirements.txt

## caching this step and the previous one means we don't have 
## download all the requirements every time
RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

# Copy app code (will be overridden by volume mount for hot reload)
COPY ./app /code/app

EXPOSE 8000

# Use FastAPI dev command for development with automatic hot reload
# Note: fastapi dev automatically enables hot reload
CMD [ "fastapi", "dev", "app/main.py", "--host", "0.0.0.0", "--port", "8000" ]
